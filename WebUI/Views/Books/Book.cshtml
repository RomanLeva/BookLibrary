@model WebUI.Models.PageViewModel

<div id="book" class="item">
    <h3>ID - @Model.BookViewModels.FirstOrDefault().BookId</h3>
    <p>Name - @Model.BookViewModels.FirstOrDefault().Name</p>
    <p>Description - @Model.BookViewModels.FirstOrDefault().Description</p>
    <p>ISBN - @Model.BookViewModels.FirstOrDefault().Isbn</p>
    <p>Date - @Model.BookViewModels.FirstOrDefault().PublicationDate.Date</p>
    <img width="300" height="300" src="@Model.BookViewModels.FirstOrDefault().ImageUrl" />
    <p>Authors:</p>
    <ul>
        @foreach (var author in Model.BookViewModels.FirstOrDefault().Authors)
        {
            <li>@Html.ActionLink(author.Name + " " + author.Surname, "Author/" + author.AuthorId, "Authors")</li>
        }
    </ul>
    <p>Genres:</p>
    <ul>
        @foreach (var genre in Model.BookViewModels.FirstOrDefault().Genres)
        {
            <li>@Html.ActionLink(genre.Name, "Genre/" + genre.GenreId, "Genres")</li>
        }
    </ul>
    <div class="statistics">
        @if(Model.BookTextStatistics != null)
        {
            <div>Text length-@Model.BookTextStatistics.TextLength,
            Average sentence lenght - @Model.BookTextStatistics.AverageSentenceLenght,
            Average word lenght - @Model.BookTextStatistics.AverageWordLenght,
            Unique words-@Model.BookTextStatistics.UniqueWords,
            Words count-@Model.BookTextStatistics.WordsCount</div>
        }
        
    </div>
    <main>@Model.BookViewModels.FirstOrDefault().Text</main>

</div>

